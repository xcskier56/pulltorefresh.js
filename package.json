{
  "name": "pulltorefreshjs",
  "version": "0.1.3",
  "description": "Pull To Refresh",
  "main": "dist/pulltorefresh.js",
  "scripts": {
    "dev": "tarima -ws --globals env='dev'",
    "dev:spec": "testem",
    "dev:build": "tarima -f --globals env='dev'",
    "lint": "eslint src",
    "build": "tarima -f --globals env='prod' --config PROD",
    "test": "tarima -f --globals env='dev' && yarn run lint && testem ci"
  },
  "author": "Rafael Soto",
  "license": "MIT",
  "tarima": {
    "public": ".",
    "dest": "./dist",
    "cacheFile": "dist/build.json",
    "rename": [
      "**/*.css:../{filepath/1}/{filename}.css",
      "**/*.html:../{filepath/1}/{filename}.html",
      "**/src/tests/**/*:../tests/{filename}.{extname}",
      "**/src/*.js:{filepath/1}/{filename}.js",
      "**/tests/*.js:/tests/{filename}.js",
      "**/tests/index.html:/tests/{filename}.html"
    ],
    "filter": [
      "!_*",
      "!**/_*",
      "!**/_*/**"
    ],
    "ignoreFiles": [
      ".gitignore"
    ],
    "devPlugins": [
      "tarima-lr"
    ],
    "bundleOptions": {
      "extensions": {
        "js": "es6"
      },
      "rollup": {
        "format": "umd"
      }
    }
  },
  "devDependencies": {
    "buble": "0.14.2",
    "chokidar": "1.6.0",
    "eslint": "3.5.0",
    "eslint-config-airbnb-base": "7.1.0",
    "eslint-plugin-import": "1.15.0",
    "less": "2.7.1",
    "pug": "2.0.0-beta6",
    "rollup": "0.36.3",
    "tarima-cli": "0.2.10",
    "tarima-lr": "0.0.5"
  }
}
